<h2>
    {{viewTitle}}
</h2>

<form action='/users' method='POST' autocomplete="off">
    <input type="hidden" name='id' value="{{users.id}}">
    <div class="form-group">
        <label>
            Full-Name:
        </label>
        <input type="text" class='form-control' name='fullName' placeholder="Full Name" value="{{users.fullName}}">
        <div class='text-danger'>
            {{users.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>
            Email Address:
        </label>
        <input type="email" class='form-control' name='email' placeholder="Email Address" value="{{users.email}}">
        <div class='text-danger'>
            {{users.emailError}}
        </div>
    </div>
    <div class="form-group">
        <label for="sel1">
            Select Role:
        </label>
        <select class="form-control" name='rolesName' placeholder="Select Role">
            <option>Select Role</option>
            <option value='Senior-Project-Manager' id='1'>Senior Project Manager</option>
            <option value='Project-Manager' id='2'>Project Manager</option>
            <option value='Manager' id='3'>Manager</option>
            <option value='Senior-Team-Member' id='4'>Senior Team Member</option>
            <option value='Technology-Analyst' id='5'>Technology Analyst</option>
            <option value='Software-Engineer' id='6'>Software Engineer</option>
        </select>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6"> 
            <label>
                Mobile:
            </label>
            <input type="text" class='form-control' name='mobile' placeholder="Mobile" value="{{users.mobile}}">
            <div class='text-danger'>
                {{users.mobileError}}
        </div>
        </div>
        <div class="form-group col-md-6">
            <label>
                City:
            </label>
            <input type="text" class='form-control' name='city' placeholder="City" value="{{users.city}}">
            <div class='text-danger'>
                {{users.cityError}}
        </div>
        </div>
    </div>
    <div class='form-group'>
        <button type="submit" class='btn btn-info'><i class="fa fa-database" aria-hidden="true"></i> Submit</button>
        <a class="btn btn-secondary" href='/users/list'>  <i class="fa fa-list"></i>  View List</a>
    </div>
</form>